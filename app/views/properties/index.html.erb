<h1>Listing properties</h1>

<table style="text-align: center">
  <thead>
    <tr>
      <th class="col-xs-5">Address</th>
      <th class="col-xs-3">City</th>
      <th class="col-xs-1">State</th>
      <th class="col-xs-1">Zip</th>
      <th class="col-xs-2">Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.address %></td>
        <td><%= property.city %></td>
        <td><%= property.state %></td>
        <td><%= property.zip %></td>
        <td><%= property.price %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

