                    <div class="controls">
                      <%= f.check_box :phone_number, :class => "form-control width-20 inline-block", :placeholder => "Question 1" %>
                      <label class="control-label" for="phone">Question 3</label>
                    </div>
                  </div>


                  <!-- Button -->
                  <div class="control-group col-xs-12">
                    <label class="control-label" for="signin"></label>
                    <div class="controls">
                      <%= f.submit "Create", :class => "btn btn-primary login" %>
                    </div>
                  </div>
                </fieldset>
            <% end %>
          </div>

          <div class="tab-pane fade" id="signup">
