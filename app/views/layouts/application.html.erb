<!DOCTYPE html>
<html>
<head>
  <title>Garretapp</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav role="navigation" class="navbar navbar-default navbar-fixed-top">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header" style="padding-left: 10px">
    <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to('Brand', root_path, {class: 'navbar-brand'}) %>
  </div>
  <!-- Collection of nav links and other content for toggling -->
  <div id="navbarCollapse" class="collapse navbar-collapse">
    <ul class="nav navbar-nav">
      <li><%= link_to('Properties', properties_path) %></li>
      <li><%= link_to('Customers', root_path) %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right" style="padding-right: 30px">
      <% if session[:user_id] %>
          <li><%= link_to('Logout', logout_path, :method => :delete) %></li>
      <% else %>
          <li><%= link_to('Login / Register', "#login", :data => {toggle: 'modal', target: ".bs-modal-sm"}) %></li>
      <% end %>
    </ul>
  </div>
</nav>

<div class="container">
  <%= render 'modals/login' %>
  <%= yield %>
</div>

</body>
</html>
